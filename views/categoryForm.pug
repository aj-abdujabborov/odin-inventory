extends layout 

block content
  h1= title
  form(method="POST")
    ul
      li
        label(for="name") Name
        input(type="text" id="name" name="name" value=name || "")
      li
        label(for="password") Admin password
        input#password(type="password", name="password")
    button(type="submit") Submit
  div.errors
    if (errors && errors.length)
      ul
        each error in errors
          li= error.msg